<Window x:Class="ColorCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorCalc"
        mc:Ignorable="d"
        Title="ColorCalc" Height="350" Width="525">
    <Grid x:Name="grid_main">
        <StackPanel DockPanel.Dock="Top">
            <TextBox x:Name="tb_Input" Height="140" TextWrapping="Wrap" Text="R,G,B or #" Margin="10,10,10,5" BorderBrush="{x:Null}" Background="White" FontSize="66" TextAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="tb_Output" Height="140" TextWrapping="Wrap" Text="# or R,G,B" Margin="10,5,10,10" BorderBrush="{x:Null}" Background="White" FontSize="66" TextAlignment="Center" VerticalContentAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
